<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <android.support.v7.widget.CardView
        android:id="@+id/item_list_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardMaxElevation="6dp"
        app:cardElevation="6dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">
            <ImageView
                android:id="@+id/item_list_card_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/item_list_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_list_card_image"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/item_list_card_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_list_card_image"
                android:layout_below="@id/item_list_card_title"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>