<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.and.mobileapp.CommentAddActivity">
    <android.support.v7.widget.CardView
        android:id="@+id/comment_add_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <Button
                android:id="@+id/comment_back_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:foreground="@drawable/arrowleft"
                android:background="@android:color/transparent"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/comment_add_card"
        android:padding="16dp">
        <TextView
            android:id="@+id/comment_add_rateit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:text="Rate it:"/>
        <RatingBar
            android:id="@+id/comment_ratingbar"
            style="@android:style/Widget.Material.Light.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:rating="0"
            android:isIndicator="false"
            android:layout_toRightOf="@id/comment_add_rateit"
            android:layout_marginLeft="48dp"/>
        <TextView
            android:id="@+id/comment_add_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/comment_add_rateit"
            android:text="Comment to"
            android:layout_marginTop="8dp"/>
        <Button
            android:id="@+id/comment_add_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="SEND"/>
        <EditText
            android:id="@+id/comment_add_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/comment_add_title"
            android:layout_above="@id/comment_add_send"
            android:gravity="start"
            android:layout_marginTop="8dp"/>

    </RelativeLayout>
</RelativeLayout>
